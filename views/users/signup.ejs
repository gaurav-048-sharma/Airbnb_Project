<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <h2 class="col-8 offset-2">Sign Up</h2>
    <div class="col-8 offset-2">
        <form method="POST" action="/signup" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-lable">Username:</label>
                <input name="username" 
                 type="username"
                  class="form-control"
                  id="username" 
                  required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="username" class="form-lable">Email:</label>
                <input name="email" 
                 type="email"
                  class="form-control"
                  id="email" 
                  required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-lable">Password:</label>
                <input name="password" 
                 type="password"
                  class="form-control"
                  id="password" 
                  required>
            </div>
            <button class="btn btn-success ">SignUp</button>
        </form>

    </div>
</div>
